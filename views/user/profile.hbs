<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>{{_user.firstName}}'s Profile</h1>
        <hr>
        <form action="/user/{{_user.id}}?_method=PUT" method="POST">
            {{> user_form_fields}}
            <div class="form-row form-row-end btn-row">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                <button class="btn btn-primary" type="submit">Update</button>
            </div>
        </form>
        <a href="/test">test</a>
        <form action="/authors/{{author.id}}?_method=PUT" method="POST">
            {{>_form_fields}}
            <div class="form-row form-row-end btn-row">
                <a class="btn btn-danger" href="/authors/{{author.id}}">Cancel</a>
                <button class="btn btn-primary" type="submit">Update</button>
            </div>
        </form>

        <h2>My Orders</h2>
        {{# each orders }}
        <div class="panel panel-default">
            <div class="panel-body">
                <ul class="list-group">
                    {{# each this.items }}
                    <li class="list-group-item">
                        <span class="badge">{{ this.price }}</span>
                        {{ this.item.title }} | {{ this.qty }} Units
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div class="panel-footer">
                <strong>Total Price: ${{ this.cart.totalPrice }}</strong>
            </div>
        </div>
        {{/each}}
    </div>
</div>